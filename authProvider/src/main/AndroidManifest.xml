<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.baoti.authprovider" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- FOR AuthProvider -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <!-- FOR AuthConsumer -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>    <!-- getAuthToken -->
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>    <!-- addAccount -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity android:name=".InfoActivity"
                  android:label="Auth Provider Info">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- FOR AuthProvider -->
        <activity android:name=".accounts.AuthenticatorActivity" android:exported="true"/>
        <service
            android:name=".accounts.AccountAuthenticatorService"
            android:exported="false" >
            <!--android:process=":auth" >-->
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

    </application>

</manifest>
